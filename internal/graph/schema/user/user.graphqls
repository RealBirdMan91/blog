# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  email: String!
  avatar: String
}

input CreateUserInput {
  email: String!
  password: String!
  avatar: String
}

type Mutation {
  signup(input: CreateUserInput!): User!
  signin(email: String!, password: String!): String! # returns JWT token
}

type Query {
  health: String!
}
